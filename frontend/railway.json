{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "npm ci",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "package.json",
      "package-lock.json",
      "src/**",
      "public/**",
      "vite.config.ts",
      "tailwind.config.ts",
      "tsconfig*.json"
    ]
  }
}
