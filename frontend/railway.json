{
  "$schema": "https://railway.com/railway.schema.json",
  "variables": {
    "NPM_CONFIG_PRODUCTION": "false",
    "NPM_CONFIG_OPTIONAL": "true",
    "NODE_ENV": "development",
    "NIXPACKS_NODE_VERSION": "22"
  },
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "rm -rf node_modules && npm ci --include=dev --ignore-scripts=false",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "package.json",
      "package-lock.json",
      "src/**",
      "public/**",
      "vite.config.ts",
      "tailwind.config.ts",
      "tsconfig*.json"
    ]
  }
}
